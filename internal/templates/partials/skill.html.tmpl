{{define "skill"}}
<div class="flex gap-2">
    {{if .HasProficiency}}
    <span class="min-w-5 underline">&check;</span>
    {{else}}
    <span class="min-w-5 underline"></span>
    {{end}}
    <span class="underline underline-offset-1 decoration-accent">
        {{$modifier := .Bonus}}
        {{if gt $modifier 0}}+{{end}}{{$modifier}}
    </span>
    <span>{{.Name}}</span>
    <span>({{.StatName}})</span>
</div>
{{end}}